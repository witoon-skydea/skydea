<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="<%= basePath %>css/styles.css">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="<%= basePath %>">Skydea</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="<%= basePath %>">Home</a>
          </li>
          <% if (locals.isAuthenticated) { %>
            <li class="nav-item">
              <a class="nav-link" href="<%= basePath %>dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="<%= basePath %>auth/logout">Logout</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="<%= basePath %>auth/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="<%= basePath %>auth/register">Register</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <% if (locals.error) { %>
      <div class="alert alert-danger">
        <%= error %>
      </div>
    <% } %>

    <% if (locals.success) { %>
      <div class="alert alert-success">
        <%= success %>
      </div>
    <% } %>

    <%- body %>
  </div>

  <footer class="mt-5 py-3 bg-light text-center">
    <div class="container">
      <p>&copy; <%= new Date().getFullYear() %> Skydea. All rights reserved.</p>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- App JavaScript -->
  <script src="<%= basePath %>js/app.js"></script>
</body>
</html>