<!-- CTA Section -->
<section class="py-5 bg-primary text-white text-center">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <h2 class="fw-bold mb-4">Ready to Experience Skydea?</h2>
        <p class="lead mb-5">Join thousands of satisfied users on our platform today.</p>
        
        <% if (!locals.isAuthenticated) { %>
          <a href="<%= basePath %>auth/register" class="btn btn-light btn-lg px-5 shadow">
