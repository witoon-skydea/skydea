  <div class="container">
    <div class="row text-center mb-5">
      <div class="col-lg-8 mx-auto">
        <h2 class="fw-bold">How It Works</h2>
        <p class="lead text-muted">Three simple steps to get started</p>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-4 mb-4 mb-md-0">
        <div class="card border-0 h-100">
          <div class="card-body text-center">
            <div class="mb-4">
              <span class="display-4 fw-bold text-primary">01</span>
            </div>
            <h3 class="h4 mb-3">Create a Trip</h3>
            <p class="text-muted mb-0">Start by setting up a new trip with dates and destination.</p>
          </div>
        </div>
      </div>
      
      <div class="col-md-4 mb-4 mb-md-0">
        <div class="card border-0 h-100">
          <div class="card-body text-center">
            <div class="mb-4">
              <span class="display-4 fw-bold text-primary">02</span>
            </div>
            <h3 class="h4 mb-3">Add Places</h3>
            <p class="text-muted mb-0">Find and add interesting places to visit during your trip.</p>
          </div>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="card border-0 h-100">
          <div class="card-body text-center">
            <div class="mb-4">
              <span class="display-4 fw-bold text-primary">03</span>
            </div>
            <h3 class="h4 mb-3">Plan Your Itinerary</h3>
            <p class="text-muted mb-0">Organize your activities day by day with our easy drag-and-drop interface.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="py-5 bg-primary text-white text-center">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <h2 class="fw-bold mb-4">Ready to Start Your Journey?</h2>
        <p class="lead mb-5">Join thousands of satisfied travelers on our platform today.</p>
        
        <% if (!locals.isAuthenticated) { %>
          <a href="<%= basePath %>auth/register" class="btn btn-light btn-lg px-5 shadow">
            <i class="fas fa-user-plus me-2"></i> Create Free Account
          </a>
        <% } else { %>
          <a href="<%= basePath %>dashboard" class="btn btn-light btn-lg px-5 shadow">
            <i class="fas fa-tachometer-alt me-2"></i> Go to Dashboard
          </a>
        <% } %>
      </div>
    </div>
  </div>
</section>
