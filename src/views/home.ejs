<!-- Clean and Simple Hero Section with Full-width Banner -->
<section class="hero py-5 bg-white">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-10 text-center">
        <!-- Simple Welcome Content -->
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
          <!-- Featured Image -->
          <div class="featured-image-container" style="max-height: 400px; overflow: hidden;">
            <img src="<%= basePath %>images/main_photo.png" alt="Skydea Featured Image" class="img-fluid w-100" style="object-fit: cover;">
          </div>
          
          <!-- Card Content -->
          <div class="card-body p-5 text-center">
            <h1 class="display-4 mb-3 fw-bold">Welcome to Skydea</h1>
            <p class="lead mb-4">Plan your perfect journey with our easy-to-use trip planner</p>
            
            <div class="d-flex justify-content-center gap-3">
              <% if (!locals.isAuthenticated) { %>
                <a href="<%= basePath %>auth/register" class="btn btn-primary btn-lg shadow">
                  <i class="fas fa-rocket me-2"></i> Get Started
                </a>
                <a href="<%= basePath %>auth/login" class="btn btn-outline-primary btn-lg">
                  <i class="fas fa-sign-in-alt me-2"></i> Sign In
                </a>
              <% } else { %>
                <a href="<%= basePath %>dashboard" class="btn btn-primary btn-lg shadow">
                  <i class="fas fa-tachometer-alt me-2"></i> Go to Dashboard
                </a>
                <a href="<%= basePath %>trips/new" class="btn btn-outline-primary btn-lg">
                  <i class="fas fa-plus me-2"></i> Create New Trip
                </a>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>