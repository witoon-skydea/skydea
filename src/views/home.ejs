<div class="row">
  <div class="col-md-12 text-center">
    <h1 class="display-4 mb-4">Welcome to Skydea</h1>
    <p class="lead">Your platform for amazing sky experiences</p>
    
    <div class="mt-5">
      <% if (!locals.isAuthenticated) { %>
        <a href="<%= basePath %>auth/register" class="btn btn-primary btn-lg me-3">Get Started</a>
        <a href="<%= basePath %>auth/login" class="btn btn-outline-primary btn-lg">Sign In</a>
      <% } else { %>
        <a href="<%= basePath %>dashboard" class="btn btn-primary btn-lg">Go to Dashboard</a>
      <% } %>
    </div>
  </div>
</div>

<div class="row mt-5">
  <div class="col-md-4">
    <div class="card mb-4">
      <div class="card-body text-center">
        <h3 class="card-title">Easy Registration</h3>
        <p class="card-text">Create your account in seconds and start your journey with Skydea.</p>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card mb-4">
      <div class="card-body text-center">
        <h3 class="card-title">Secure Platform</h3>
        <p class="card-text">Your data is protected with industry-standard security measures.</p>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card mb-4">
      <div class="card-body text-center">
        <h3 class="card-title">User-Friendly</h3>
        <p class="card-text">Intuitive interface designed to make your experience enjoyable.</p>
      </div>
    </div>
  </div>
</div>