<!-- Clean Hero Section with Centered Card -->
<section class="hero py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
          <!-- Random Feature Image Card -->
          <div class="card-img-top position-relative">
            <img src="" alt="Skydea Feature" id="random-feature-image" class="img-fluid w-100">
            <div class="position-absolute top-0 end-0 m-3">
              <span class="badge bg-light text-primary p-2 rounded-pill shadow-sm" id="feature-image-caption"></span>
            </div>
          </div>
          <div class="card-body p-5 text-center">
            <h1 class="display-4 mb-3 fw-bold">Welcome to Skydea</h1>
            <p class="lead mb-4">Plan your perfect journey with our easy-to-use trip planner</p>
            
            <div class="d-flex justify-content-center gap-3">
              <% if (!locals.isAuthenticated) { %>
                <a href="<%= basePath %>auth/register" class="btn btn-primary btn-lg shadow">
                  <i class="fas fa-rocket me-2"></i> Get Started
                </a>
                <a href="<%= basePath %>auth/login" class="btn btn-outline-primary btn-lg">
                  <i class="fas fa-sign-in-alt me-2"></i> Sign In
                </a>
              <% } else { %>
                <a href="<%= basePath %>dashboard" class="btn btn-primary btn-lg shadow">
                  <i class="fas fa-tachometer-alt me-2"></i> Go to Dashboard
                </a>
                <a href="<%= basePath %>trips/new" class="btn btn-outline-primary btn-lg">
                  <i class="fas fa-plus me-2"></i> Create New Trip
                </a>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="row text-center mb-5">
      <div class="col-lg-8 mx-auto">
        <h2 class="fw-bold">Why Choose Skydea?</h2>
        <p class="lead text-muted">Everything you need to plan the perfect trip</p>
      </div>
    </div>
    <div class="row g-4">
      <div class="col-md-4">
        <div class="card border-0 h-100 shadow-sm">
          <div class="card-body text-center p-4">
            <div class="feature-icon bg-primary text-white rounded-circle mb-4">
              <i class="fas fa-map-marked-alt"></i>
            </div>
            <h5 class="card-title">Easy Planning</h5>
            <p class="card-text">Create detailed itineraries with our intuitive interface.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card border-0 h-100 shadow-sm">
          <div class="card-body text-center p-4">
            <div class="feature-icon bg-primary text-white rounded-circle mb-4">
              <i class="fas fa-search-location"></i>
            </div>
            <h5 class="card-title">Discover Places</h5>
            <p class="card-text">Find amazing destinations and add them to your trip.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card border-0 h-100 shadow-sm">
          <div class="card-body text-center p-4">
            <div class="feature-icon bg-primary text-white rounded-circle mb-4">
              <i class="fas fa-share-alt"></i>
            </div>
            <h5 class="card-title">Share & Collaborate</h5>
            <p class="card-text">Share your trips with friends and family.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- How It Works Section -->
