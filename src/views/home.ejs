<!-- Hero Section -->
<section class="hero text-center text-white">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-10">
        <h1 class="display-4 mb-3 fw-bold">Welcome to Skydea</h1>
        <p class="lead mb-4">Your premium platform for extraordinary sky experiences</p>
        
        <div class="mt-5">
          <% if (!locals.isAuthenticated) { %>
            <a href="<%= basePath %>auth/register" class="btn btn-light btn-lg me-3 shadow">
              <i class="fas fa-rocket me-2"></i> Get Started
            </a>
            <a href="<%= basePath %>auth/login" class="btn btn-outline-light btn-lg">
              <i class="fas fa-sign-in-alt me-2"></i> Sign In
            </a>
          <% } else { %>
            <a href="<%= basePath %>dashboard" class="btn btn-light btn-lg shadow">
              <i class="fas fa-tachometer-alt me-2"></i> Go to Dashboard
            </a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
