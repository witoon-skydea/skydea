<!-- Clean and Simple Hero Section with Carousel Card Only -->
<section class="hero py-5 bg-white">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <!-- Simple Card with Carousel -->
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
          <!-- Carousel -->
          <div id="featureCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <!-- Carousel items will be dynamically populated via JavaScript -->
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#featureCarousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#featureCarousel" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
          
          <!-- Card Content -->
          <div class="card-body p-5 text-center">
            <h1 class="display-4 mb-3 fw-bold">Welcome to Skydea</h1>
            <p class="lead mb-4">Plan your perfect journey with our easy-to-use trip planner</p>
            
            <div class="d-flex justify-content-center gap-3">
              <% if (!locals.isAuthenticated) { %>
                <a href="<%= basePath %>auth/register" class="btn btn-primary btn-lg shadow">
                  <i class="fas fa-rocket me-2"></i> Get Started
                </a>
                <a href="<%= basePath %>auth/login" class="btn btn-outline-primary btn-lg">
                  <i class="fas fa-sign-in-alt me-2"></i> Sign In
                </a>
              <% } else { %>
                <a href="<%= basePath %>dashboard" class="btn btn-primary btn-lg shadow">
                  <i class="fas fa-tachometer-alt me-2"></i> Go to Dashboard
                </a>
                <a href="<%= basePath %>trips/new" class="btn btn-outline-primary btn-lg">
                  <i class="fas fa-plus me-2"></i> Create New Trip
                </a>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
